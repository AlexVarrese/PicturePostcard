<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ConferenceApp.SpeakerTranslationPage">
	<StackLayout Padding="20">
		<Button Text="Start" VerticalOptions="Center" x:Name="btnRecord" WidthRequest="200"/>
		<Label Text="Recognized text" FontSize="Large"/>
		<Label Text="Nothing recognized yet!" x:Name="txtRecognized" VerticalOptions="FillAndExpand" LineBreakMode="WordWrap" FontSize="Small"/>
		<Label Text="Translation" FontSize="Large"/>
		<Label Text="Nothing translated yet!" x:Name="txtTranslated" VerticalOptions="FillAndExpand" LineBreakMode="WordWrap" FontSize="Small"/>
	</StackLayout>
</ContentPage>